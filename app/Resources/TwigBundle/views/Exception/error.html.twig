{% extends 'MQMShopBundle:Frontend:layout.html.twig' %}

{% block title %}

{% if status_code == 403 %}
| Tecnokey | Usuario no validado |
{% else %}
| Tecnokey | Error: {{ status_code }} {{ status_text }} |
{% endif %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/mqmshop/css/user.css') }}" rel="stylesheet" type="text/css" />
{% endblock stylesheets %}

{% block menu %}
        {% include 'MQMShopBundle:Frontend:menu.partialhtml.twig' with {'menu' : 'productos'} %}
{% endblock %}

{% block contextualThree %}<a href="{{ path('TKShopFrontendIndex') }}">Inicio</a>
{% endblock %}

{% block left %}
    {% render path('TKShopFrontendCategoriesShowAllFamilies', {'_format': 'partialhtml'}) | mqm_shop_to_app_path %}
{% endblock %}

{% block right_content %}
    {% if status_code == 403 %}
    <h1>Su cuenta de usuario aún no está validada por el staff de Tecnokey</h1>
    {% else %}
    <h1>La página que está buscando no es accesible</h1>
    <h3>Ha ocurrido algo inesperado o ha seguido un enlace equivocado</h3>    
    {% endif %}
    <a href="{{ path('TKShopFrontendIndex') }}"><h4>Click aquí para volver a Tecno-key</h4></a>    

{% endblock right_content %}


